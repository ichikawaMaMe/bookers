<!DOCTYPE html>
  <%= stylesheet_link_tag 'books' %>
<html>

<head>
</head>

<h1>Books</h1>

<tr>
  <th>Title</th>
  <th>Body</th><br>
  <th colspan="3"></th>

</tr>

<% @books.each do |book| %>
<table class="table">
  <tr class="tr">
    <td><%= book.title %></td>
      <td><span class="book-body"><%= book.body %></span></td>
      <td>
      <td><span><%= link_to "show", "/books/#{book.id}" %></span></td>
      <td><span><%= link_to "edit", "/books/#{book.id}/edit" %></span></td>
      <td><span><%= link_to "destroy", "books/#{book.id}", method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></span></td>
      </td>
  </tr>

</table>
<% end %>

<h2>New book</h2>

 <% if @book.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</h2>
       <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>